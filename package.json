  "scripts": {
    "changelog": "node ./scripts/genChangelog.js",
    "commit": "cz",
    "lerna:publish": "lerna publish --force-publish --no-push --no-git-tag-version --yes",
    "lint": "eslint --config ./.eslintrc.js . --ext .js,.jsx,.ts,.tsx,.vue",
    "lint:fix": "eslint --config ./.eslintrc.js --fix . --ext .js,.jsx,.ts,.tsx,.vue",
    "prepare": "husky install",
    "prettier": "prettier --write *",
    "release": "node ./scripts/release.js"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.js"
    }
  },
  "dependencies": {
    "lerna-changelog": "^2.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "chalk": "^4.1.2",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.0.0",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.1",
    "inquirer": "^8",
    "lerna": "^5.6.1",
    "lint-staged": "^13.0.3",
    "semver": "^7.3.7"
  },
  "publishConfig": {
    "registry": "http://registry.hsslive.cn/"
  }
